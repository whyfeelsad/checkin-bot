# ==================== Telegram Bot 配置 ====================
# Bot Token (从 @BotFather 获取)
BOT_TOKEN=your_telegram_bot_token_here

# 管理员 ID 列表（逗号分隔）
ADMIN_IDS=123456789,987654321

# 白名单配置（逗号分隔，留空则允许所有）
WHITELIST_USER_IDS=
WHITELIST_GROUP_IDS=
WHITELIST_CHANNEL_IDS=

# ==================== Cloudflyer 验证码配置 ====================
# Cloudflyer API 地址（自建）
CLOUDFLYER_API_URL=http://your-cloudflyer-instance.com
# Cloudflyer API 密钥
CLOUDFLYER_API_KEY=your_cloudflyer_api_key
# 最大重试次数
CAPTCHA_MAX_RETRIES=20
# 重试间隔（秒）
CAPTCHA_RETRY_INTERVAL=3
# curl_cffi 模拟浏览器版本
IMPERSONATE_BROWSER=chrome136

# ==================== 时区配置 ====================
TIMEZONE=Asia/Shanghai

# ==================== 数据库配置 ====================
# PostgreSQL 连接字符串
DATABASE_URL=postgresql://user:password@localhost:5432/checkin_bot

# ==================== 加密配置 ====================
# AES-256-GCM 加密密钥（32 字节）
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# ==================== 会话与缓存配置 ====================
# 会话过期时间（分钟）
SESSION_TTL_MINUTES=10
# 权限缓存时间（分钟）
PERMISSION_CACHE_TTL_MINUTES=5

# ==================== SOCKS5 代理配置 ====================
# SOCKS5 代理地址（用于签到请求、获取 Cookie 等）
# 格式: socks5://host:port 或 socks5://username:password@host:port
# 示例: SOCKS5_PROXY=socks5://127.0.0.1:1080
#       SOCKS5_PROXY=socks5://user:pass@127.0.0.1:1080
SOCKS5_PROXY=

# 是否让 Telegram API 也走代理（默认 false）
# 设置为 true 时，Telegram Bot 的 API 请求也会使用 SOCKS5_PROXY
TELEGRAM_USE_PROXY=false

# ==================== 日志配置 ====================
# 日志级别: DEBUG, INFO, WARNING, ERROR
# DEBUG - 详细执行信息（账号信息、API 调用）
# INFO - 关键操作（账号操作、签到成功）
# WARNING - 权限拒绝、操作失败
# ERROR - 仅异常错误
LOG_LEVEL=INFO
